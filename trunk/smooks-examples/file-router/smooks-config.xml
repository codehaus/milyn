<?xml version="1.0"?>
<smooks-resource-list xmlns="http://www.milyn.org/xsd/smooks-1.0.xsd">

    <resource-config selector="global-parameters">
		<param name="stream.filter.type">SAX</param>
	</resource-config>

     <resource-config selector="$document">
        <resource>org.milyn.routing.file.FileRouter</resource>
        <param name="beanId">order</param>
        <param name="visitAfter">true</param>
        <param name="destinationDirectory">target/</param>
        <param name="fileNamePattern">CustomerName-${header.customerName}-Nr-${header.customerNumber}.txt</param>
    </resource-config>

     <resource-config selector="example.model.Order orderItems">
        <resource>org.milyn.routing.file.FileRouter</resource>
        <param name="beanId">order</param>
        <param name="visitAfter">true</param>
        <param name="destinationDirectory">target/</param>
        <param name="fileNamePattern">ProductId-${orderItems[0].productId}.txt</param>
    </resource-config>

</smooks-resource-list>
