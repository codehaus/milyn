<?xml version="1.0"?>
<smooks-resource-list xmlns="http://www.milyn.org/xsd/smooks-1.0.xsd" default-target-profile="request">

    <profiles>
        <profile base-profile="request" />
    </profiles>

    <!--
    Use an XSLT templatelet to perform the request "trackingNumber" transformation...
    -->
    <resource-config selector="trackingNumber">
        <resource type="xsl">
            <!--
            <trackingNumber>
                <xsl:value-of select="shipperID" />:<xsl:value-of select="shipmentNumber" />
            </trackingNumber>
            -->
        </resource>
        <param name="is-xslt-templatelet">true</param>
    </resource-config>

</smooks-resource-list>
