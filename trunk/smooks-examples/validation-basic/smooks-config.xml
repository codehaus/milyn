<?xml version="1.0"?>
<smooks-resource-list xmlns="http://www.milyn.org/xsd/smooks-1.0.xsd">

    <resource-config selector="email">
        <resource>org.milyn.validation.regex.Validator</resource>
        <param name="alias">email</param>
        <param name="failFast">false</param>
    </resource-config>
    
    <resource-config selector="username">
        <resource>org.milyn.validation.regex.Validator</resource>
        <param name="regex">[a-zA-z]*</param>
        <param name="failFast">false</param>
    </resource-config>
    
    <resource-config selector="product-id">
        <resource>org.milyn.validation.regex.Validator</resource>
        <param name="alias">productId</param>
        <param name="aliasFile">/my-regexes.properties</param>
        <param name="failFast">false</param>
    </resource-config>

</smooks-resource-list>