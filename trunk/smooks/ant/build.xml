<project name="Smooks Project Ant build script" default="build">
	<description>Smooks Project</description>

	<target name="build" description="Build Smooks.">
		<ant antfile="build/build.xml"/>
	</target>

	<target name="test" depends="build" description="Execute Tests.">
		<property name="select.unittest.target" value="*" />
		<ant antfile="test/build.xml"/>
	</target>

	<target name="testx" depends="build" description="Execute specific Test(s).">
		<input message="Specify the class/classes who's unit tests are to be executed? (wildcards supported)" addproperty="select.unittest.target" />
		<ant antfile="test/build.xml"/>
	</target>
	
	<target name="javadoc" description="Build Smooks API Javadoc.">
		<ant antfile="build/build.xml" target="javadoc"/>
	</target>

	<target name="clean" description="Clean.">
		<ant antfile="build/build.xml" target="clean"/>
		<ant antfile="test/build.xml" target="clean"/>
	</target>
</project>

