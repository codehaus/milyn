<?xml version="1.0"?>
<smooks-resource-list xmlns="http://www.milyn.org/xsd/smooks-1.1.xsd" default-selector-namespace="http://www.milyn.org/xsd/smooks/persistence-1.1.xsd">

	<!-- PERSISTER -->

    <resource-config selector="persister">
        <resource>org.milyn.cdr.extension.NewResourceConfig</resource>
        <param name="resource">org.milyn.persistence.EntityPersister</param>
    </resource-config>

    <resource-config selector="persister">
        <resource>org.milyn.cdr.extension.MapToResourceConfigFromAttribute</resource>
        <param name="attribute">persistOnElement</param>
        <param name="mapTo">selector</param>
    </resource-config>

    <resource-config selector="persister">
        <resource>org.milyn.cdr.extension.MapToResourceConfigFromAttribute</resource>
        <param name="attribute">persistOnElementNS</param>
        <param name="mapTo">selector-namespace</param>
    </resource-config>

    <resource-config selector="persister">
        <resource>org.milyn.cdr.extension.MapToResourceConfigFromAttribute</resource>
        <param name="attribute">beanId</param>
    </resource-config>

    <resource-config selector="persister">
        <resource>org.milyn.cdr.extension.MapToResourceConfigFromAttribute</resource>
        <param name="attribute">persistedBeanId</param>
    </resource-config>

    <resource-config selector="persister">
        <resource>org.milyn.cdr.extension.MapToResourceConfigFromAttribute</resource>
        <param name="attribute">dao</param>
    </resource-config>

    <resource-config selector="persister">
        <resource>org.milyn.cdr.extension.MapToResourceConfigFromAttribute</resource>
        <param name="attribute">statementId</param>
    </resource-config>

    <resource-config selector="persister">
        <resource>org.milyn.cdr.extension.MapToResourceConfigFromAttribute</resource>
        <param name="attribute">persistMode</param>
    </resource-config>

    <resource-config selector="persister">
        <resource>org.milyn.cdr.extension.MapToResourceConfigFromAttribute</resource>
        <param name="attribute">executeBefore</param>
    </resource-config>

    <!-- FLUSHER -->

    <resource-config selector="flusher">
        <resource>org.milyn.cdr.extension.NewResourceConfig</resource>
        <param name="resource">org.milyn.persistence.DaoFlusher</param>
    </resource-config>

    <resource-config selector="flusher">
        <resource>org.milyn.cdr.extension.MapToResourceConfigFromAttribute</resource>
        <param name="attribute">flushOnElement</param>
        <param name="mapTo">selector</param>
    </resource-config>

    <resource-config selector="flusher">
        <resource>org.milyn.cdr.extension.MapToResourceConfigFromAttribute</resource>
        <param name="attribute">flushOnElement</param>
        <param name="mapTo">selector-namespace</param>
    </resource-config>

    <resource-config selector="flusher">
        <resource>org.milyn.cdr.extension.MapToResourceConfigFromAttribute</resource>
        <param name="attribute">dao</param>
    </resource-config>

    <resource-config selector="flusher">
        <resource>org.milyn.cdr.extension.MapToResourceConfigFromAttribute</resource>
        <param name="attribute">statementId</param>
    </resource-config>

    <resource-config selector="flusher">
        <resource>org.milyn.cdr.extension.MapToResourceConfigFromAttribute</resource>
        <param name="attribute">executeBefore</param>
    </resource-config>
</smooks-resource-list>