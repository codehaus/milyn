<?xml version="1.0"?>
<smooks-resource-list xmlns="http://www.milyn.org/xsd/smooks-1.0.xsd">

    <resource-config selector="user">
        <resource>org.milyn.javabean.BeanPopulator</resource>
        <param name="beanId">userBean</param>
        <param name="beanClass">org.milyn.javabean.MyGoodBean</param>
    </resource-config>

    <resource-config selector="user">
        <resource>org.milyn.javabean.BeanPopulator</resource>
        <param name="beanId">userBean</param>
        <param name="attributeName">name</param>
    </resource-config>

    <resource-config selector="user">
        <resource>org.milyn.javabean.BeanPopulator</resource>
        <param name="beanId">userBean</param>
        <param name="attributeName">phoneNumber</param>
    </resource-config>

    <resource-config selector="user">
        <resource>org.milyn.javabean.BeanPopulator</resource>
        <param name="beanId">userBean</param>
        <param name="setterName">setAddress</param>
    </resource-config>

</smooks-resource-list>