<?xml version="1.0"?>
<smooks-resource-list xmlns="http://www.milyn.org/xsd/smooks-1.1.xsd" default-selector-namespace="http://www.milyn.org/xsd/smooks/validation-1.0.xsd">

    <!--
        Bean Instance Creator Resource...
    -->

    <resource-config selector="field">
        <resource>org.milyn.cdr.extension.NewResourceConfig</resource>
        <param name="resource">org.milyn.smooks.validation.Validator</param>
    </resource-config>

    <resource-config selector="field">
        <resource>org.milyn.cdr.extension.MapToResourceConfigFromAttribute</resource>
        <param name="attribute">on</param>
    </resource-config>
    
    <resource-config selector="field">
        <resource>org.milyn.cdr.extension.MapToResourceConfigFromAttribute</resource>
        <param name="attribute">onFail</param>
    </resource-config>
        
    <resource-config selector="field">
        <resource>org.milyn.cdr.extension.MapToResourceConfigFromAttribute</resource>
        <param name="attribute">rule</param>
    </resource-config>

</smooks-resource-list>