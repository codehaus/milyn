<?xml version="1.0"?>
<smooks-resource-list xmlns="http://www.milyn.org/xsd/smooks-1.1.xsd" xmlns:jb="http://www.milyn.org/xsd/smooks/javabean-1.1.xsd">

    <!--
    Filter the message using the SAX Filter (i.e. not DOM, so no
    intermediate DOM, so we can process huge messages...
    -->
    <params>
        <param name="stream.filter.type">SAX</param>
    </params>

    <jb:bindings beanId="order" class="java.util.Hashtable" createOnElement="order">
        <jb:value property="orderId" decoder="Integer" data="order/@id"/>
        <jb:value property="customerNumber" decoder="Long" data="header/customer/@number"/>
        <jb:value property="customerName" data="header/customer"/>
        <jb:wiring property="orderItem" beanIdRef="orderItem" />
    </jb:bindings>

    <jb:bindings beanId="orderItem" class="java.util.Hashtable" createOnElement="order-item">
        <jb:value property="itemId" decoder="Integer" data="order-item/@id"/>
        <jb:value property="productId" decoder="Long" data="order-item/product"/>
        <jb:value property="quantity" decoder="Integer" data="order-item/quantity"/>
        <jb:value property="price" decoder="Double" data="order-item/price"/>
    </jb:bindings>

    <resource-config selector="order-item">
        <resource>org.milyn.routing.file.FileOutputStreamResource</resource>
        <param name="resourceName">orderItemSplitStream</param>
        <param name="fileNamePattern">order-${order.orderId}-${order.orderItem.itemId}.xml</param>
        <param name="destinationDirectoryPattern">target/orders</param>
        <param name="listFileNamePattern">order-${order.orderId}.lst</param>
        <param name="highWaterMark">3</param>
    </resource-config>

    <resource-config selector="order-item">
        <resource>target/classes/orderitem-split.ftl</resource>
        <param name="outputStreamResource">orderItemSplitStream</param>
    </resource-config>

</smooks-resource-list>