<?xml version="1.0"?>
<smooks-resource-list xmlns="http://www.milyn.org/xsd/smooks-1.0.xsd" default-target-profile="response">

    <profiles>
        <profile base-profile="response" />
    </profiles>

    <!--
    Configure the History bean creation and population. This is used by
    the StringTemplate template configured below...
    -->
    <resource-config selector="history">
        <resource>org.milyn.javabean.ProcessingPhaseBeanPopulator</resource>
        <param name="beanId">history</param>
        <param name="beanClass">example.beans.History</param>
        <param name="bindings">
            <binding property="trackingNumbers" type="TrackingNumberHistory" selector="history" />
        </param>
    </resource-config>

    <!--
    Use a StringTemplate template to perform the transformation.
    We're transforming the "history" element...
    -->
    <resource-config selector="history">
        <resource>/example/templates/HistoryTrans.st</resource>
        <param name="action">replace</param>
    </resource-config>

    <!--
    Configure a special decoder for TrackingNumber History field.
    -->
    <resource-config selector="decoder:TrackingNumberHistory">
        <resource>example.beans.TrackingNumberHistoryDecoder</resource>
    </resource-config>

</smooks-resource-list>
