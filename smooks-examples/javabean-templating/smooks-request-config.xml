<?xml version="1.0"?>
<smooks-resource-list xmlns="http://www.milyn.org/xsd/smooks-1.0.xsd" default-target-profile="request">

    <profiles>
        <profile base-profile="request" sub-profiles="x" />
    </profiles>

    <!--
    Configure the TrackingNumber bean creation and population. This is used by
    the XSLT templatelet configured below...
    -->
    <resource-config selector="trackingNumber">
        <resource>org.milyn.javabean.ProcessingPhaseBeanPopulator</resource>
        <param name="beanId">trackingNumber</param>
        <param name="beanClass">example.beans.TrackingNumber</param>
        <param name="bindings">
            <binding property="shipperID" type="String" selector="trackingNumber shipperID" />
            <binding property="shipmentNumber" type="String" selector="trackingNumber shipmentNumber" />
        </param>
    </resource-config>

    <!--
    Use an XSLT templatelet to perform the request "trackingNumber" transformation...
    -->
    <resource-config selector="trackingNumber">
        <resource type="xsl">
            <!--
            <trackingNumber>
                <xsl:value-of select="smooks-bean:select('trackingNumber')" />
            </trackingNumber>
            -->
        </resource>
    </resource-config>

</smooks-resource-list>
