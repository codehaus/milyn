<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>milyn</groupId>
        <artifactId>milyn</artifactId>
        <version>1.0</version>
    </parent>
    <groupId>milyn</groupId>
    <artifactId>smooks-examples</artifactId>
    <name>Milyn Smooks Examples (Base POM)</name>
    <packaging>pom</packaging>
    <version>1.0</version>

    <modules>
        <module>java-basic</module>
        <module>xslt-basic</module>
        <module>xslt-groovy</module>
        <module>xslt-namespaces</module>
        <!-- module>xslt-complex</module -->
        <module>javabean-populator</module>
        <module>model-driven-basic</module>
        <module>csv-to-xml</module>
        <module>edi-to-xml</module>
        <module>edi-to-java</module>
        <module>profiling</module>
    </modules>

    <properties>
        <milyn.smooks.servlet.version>0.2.2</milyn.smooks.servlet.version>
        <milyn.smooks.misc.version>0.2.1</milyn.smooks.misc.version>
        <milyn.smooks.dtd.version>0.1</milyn.smooks.dtd.version>
        <milyn.smooks.css.version>0.1.2</milyn.smooks.css.version>
        <milyn.smooks.javabean.version>0.4.1</milyn.smooks.javabean.version>
        <milyn.smooks.templating.version>0.3</milyn.smooks.templating.version>
        <milyn.smooks.csv.version>0.2</milyn.smooks.csv.version>
        <milyn.smooks.edi.version>0.2</milyn.smooks.edi.version>
        <milyn.smooks.scripting.version>0.1.1</milyn.smooks.scripting.version>
    </properties>

    <dependencies>
        <dependency>
            <groupId>milyn</groupId>
            <artifactId>milyn-smooks-core</artifactId>
            <version>${milyn.smooks.core.version}</version>
            <exclusions>
                <exclusion>
                    <groupId>dtdparser</groupId>
                    <artifactId>dtdparser</artifactId>
                </exclusion>
            </exclusions>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <artifactId>maven-assembly-plugin</artifactId>
                <configuration>
                    <descriptor>src/main/assembly/dep.xml</descriptor>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>exec-maven-plugin</artifactId>
                <configuration>
                    <executable>java</executable>
                    <mainClass>example.Main</mainClass>
                </configuration>
            </plugin>
        </plugins>
    </build>

    <repositories>
        <repository>
            <id>milyn</id>
            <url>http://dist.codehaus.org</url>
        </repository>
    </repositories>

</project>