<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>milyn</groupId>
        <artifactId>milyn</artifactId>
        <version>1.1</version>
    </parent>
    <groupId>milyn</groupId>
    <artifactId>smooks-examples</artifactId>
    <name>Milyn Smooks Examples (Base POM)</name>
    <packaging>pom</packaging>
    <version>1.1</version>

    <modules>
        <module>css</module>
        <module>java-basic</module>
        <module>xslt-basic</module>
        <module>xslt-groovy</module>
        <module>xslt-namespaces</module>
        <!-- module>xslt-complex</module -->
        <module>javabean-populator</module>
        <module>model-driven-basic</module>
        <module>csv-to-xml</module>
        <module>edi-to-xml</module>
        <module>edi-to-java</module>
        <module>profiling</module>
        <module>sj-testimonial</module>
    </modules>

    <properties>
        <milyn.smooks.servlet.version>${milyn.smooks.core.version}</milyn.smooks.servlet.version>
        <milyn.smooks.misc.version>${milyn.smooks.core.version}</milyn.smooks.misc.version>
        <milyn.smooks.dtd.version>${milyn.smooks.core.version}</milyn.smooks.dtd.version>
        <milyn.smooks.css.version>${milyn.smooks.core.version}</milyn.smooks.css.version>
        <milyn.smooks.javabean.version>${milyn.smooks.core.version}</milyn.smooks.javabean.version>
        <milyn.smooks.templating.version>${milyn.smooks.core.version}</milyn.smooks.templating.version>
        <milyn.smooks.csv.version>${milyn.smooks.core.version}</milyn.smooks.csv.version>
        <milyn.smooks.edi.version>${milyn.smooks.core.version}</milyn.smooks.edi.version>
        <milyn.smooks.scripting.version>${milyn.smooks.core.version}</milyn.smooks.scripting.version>
    </properties>

    <dependencies>
        <dependency>
            <groupId>milyn</groupId>
            <artifactId>milyn-smooks-core</artifactId>
            <version>${milyn.smooks.core.version}</version>
            <exclusions>
                <exclusion>
                    <groupId>dtdparser</groupId>
                    <artifactId>dtdparser</artifactId>
                </exclusion>
            </exclusions>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <artifactId>maven-assembly-plugin</artifactId>
                <configuration>
                    <descriptor>src/main/assembly/dep.xml</descriptor>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>exec-maven-plugin</artifactId>
                <configuration>
                    <executable>java</executable>
                    <mainClass>example.Main</mainClass>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-dependency-plugin</artifactId>
                <executions>
                    <execution>
                        <id>copy-dependencies</id>
                        <phase>package</phase>
                        <goals>
                            <goal>copy-dependencies</goal>
                        </goals>
                        <configuration>
                            <outputDirectory>${project.build.directory}/dependencies</outputDirectory>
                            <overWriteReleases>false</overWriteReleases>
                            <overWriteSnapshots>true</overWriteSnapshots>
                            <excludeTransitive>true</excludeTransitive>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
    <reporting>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-javadoc-plugin</artifactId>
                <configuration>
                    <links>
                        <link>http://java.sun.com/j2se/1.5.0/docs/api</link>
                        <link>http://milyn.codehaus.org/javadoc/v${milyn.smooks.core.version.base}/commons</link>
                        <link>http://milyn.codehaus.org/javadoc/v${milyn.smooks.core.version.base}/tinak</link>
                        <link>http://milyn.codehaus.org/javadoc/v${milyn.smooks.core.version.base}/smooks</link>
                        <link>http://milyn.codehaus.org/javadoc/v${milyn.smooks.core.version.base}/magger</link>
                        <link>http://milyn.codehaus.org/javadoc/v${milyn.smooks.core.version.base}/edisax</link>
                        <link>http://www.w3.org/Style/CSS/SAC/doc/</link>
                    </links>
                </configuration>
            </plugin>
        </plugins>
    </reporting>

    <repositories>
        <repository>
            <id>milyn</id>
            <url>http://dist.codehaus.org</url>
        </repository>
    </repositories>

</project>