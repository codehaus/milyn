<?xml version="1.0"?>
<smooks-resource-list  xmlns="http://www.milyn.org/xsd/smooks-1.1.xsd"  xmlns:rules="http://www.milyn.org/xsd/smooks/rules-1.0.xsd" xmlns:validation="http://www.milyn.org/xsd/smooks/validation-1.0.xsd">

    <rules:ruleBases>
        <rules:ruleBase name="default" src="/smooks-regex.properties" provider="org.milyn.rules.regex.RegexProvider"/>
        <rules:ruleBase name="my" src="/my-regexes.properties" provider="org.milyn.rules.regex.RegexProvider"/>
    </rules:ruleBases>
    
    <validation:rule executeOn="email" name="default.email" onFail="WARN"/>
    
    <validation:rule executeOn="product-id" name="my.productId" onFail="WARN"/>

</smooks-resource-list>