<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>org.milyn.edi</groupId>
    <artifactId>edi-gen</artifactId>
    <packaging>pom</packaging>
    <version>1.4-SNAPSHOT</version> <!-- base pom version - do not remove this comment -->
    <name>Milyn Smooks EDI Generation</name>

    <properties>
        <smooks.version>1.4-SNAPSHOT</smooks.version> <!-- ## Smooks Version ## -->

        <!-- UN/EDIFACT versions... -->
        <d93a.version>1.0-SNAPSHOT</d93a.version>
        <d03b.version>1.0-SNAPSHOT</d03b.version>
        <d08a.version>1.0-SNAPSHOT</d08a.version>
    </properties>

    <profiles>
        <profile>
            <id>all</id>
            <modules>
                <!-- UN/EDIFACT D93A... -->
                <!--<module>unedifact/d93a/mapping</module>-->

                <!-- UN/EDIFACT D03B... -->
                <module>unedifact/d03b/mapping</module>
                <module>unedifact/d03b/binding</module>
                <module>unedifact/d03b/test</module>

                <!-- UN/EDIFACT D08A... -->
                <module>unedifact/d08a/mapping</module>
                <module>unedifact/d08a/test</module>
            </modules>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
        </profile>
        <profile>
            <id>deploy</id>
            <modules>
                <!-- UN/EDIFACT D93A... -->
                <!--<module>unedifact/d93a/mapping</module>-->

                <!-- UN/EDIFACT D03B... -->
                <module>unedifact/d03b/mapping</module>
                <module>unedifact/d03b/binding</module>

                <!-- UN/EDIFACT D08A... -->
                <module>unedifact/d08a/mapping</module>
            </modules>
        </profile>
    </profiles>

    <dependencies>
        <dependency>
			<groupId>org.milyn</groupId>
			<artifactId>milyn-smooks-edi</artifactId>
			<version>${smooks.version}</version>
		</dependency>
        <dependency>
            <groupId>org.milyn</groupId>
            <artifactId>milyn-smooks-ect</artifactId>
            <version>${smooks.version}</version>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.milyn</groupId>
            <artifactId>milyn-smooks-ejc</artifactId>
            <version>${smooks.version}</version>
        </dependency>
        <dependency>
            <groupId>org.milyn</groupId>
            <artifactId>testres</artifactId>
            <version>${smooks.version}</version>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <version>4.4</version>
            <scope>test</scope>
        </dependency>

        <dependency>
            <groupId>log4j</groupId>
            <artifactId>log4j</artifactId>
            <version>1.2.14</version>
            <scope>test</scope>
        </dependency>
    </dependencies>
    
    <build>
        <plugins>
            <plugin>
                <artifactId>maven-compiler-plugin</artifactId>
                <configuration>
                    <source>1.5</source>
                    <target>1.5</target>
                </configuration>
            </plugin>
        </plugins>
        <resources>
            <resource>
                <directory>src/main/java</directory>
                <excludes>
                    <exclude>**/*.java</exclude>
                </excludes>
            </resource>
            <resource>
                <directory>src/main/resources</directory>
            </resource>
        </resources>
        <testResources>
            <testResource>
                <directory>src/test/java</directory>
                <excludes>
                    <exclude>**/*.java</exclude>
                </excludes>
            </testResource>
            <testResource>
                <directory>src/test/resources</directory>
            </testResource>
        </testResources>
    </build>

    <distributionManagement>
        <repository>
            <id>codehaus.maven.repo</id>
            <name>Milyn Central Maven2 Repository</name>
            <url>dav:https://dav.codehaus.org/repository/milyn/</url>
        </repository>
        <snapshotRepository>
            <id>codehaus.maven.repo</id>
            <name>Milyn Central Maven2 SNAPSHOT Repository</name>
            <url>dav:https://dav.codehaus.org/snapshots.repository/milyn/</url>
        </snapshotRepository>
        <site>
            <id>codehaus.maven.repo</id>
            <url>dav:https://dav.codehaus.org/xfire/</url>
        </site>
    </distributionManagement>

</project>
