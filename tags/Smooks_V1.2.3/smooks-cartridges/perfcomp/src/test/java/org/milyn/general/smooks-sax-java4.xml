<?xml version="1.0"?>
<smooks-resource-list xmlns="http://www.milyn.org/xsd/smooks-1.0.xsd">

    <resource-config selector="global-parameters">
        <param name="stream.filter.type">SAX</param>
        <param name="maintain.element.stack">false</param>
    </resource-config>

    <resource-config selector="$document">
        <resource>org.milyn.javabean.BeanPopulator</resource>
        <param name="beanId">orderItemList</param>
        <param name="beanClass">java.util.ArrayList</param>
        <param name="bindings">
            <binding selector="${orderItem}" />
		</param>
    </resource-config>

    <resource-config selector="org.milyn.general.OrderItem">
        <resource>org.milyn.javabean.BeanPopulator</resource>
        <param name="beanId">orderItem</param>
        <param name="beanClass">org.milyn.general.OrderItem</param>
        <param name="bindings">
            <binding property="position" selector="position" />
            <binding property="quantity" selector="quantity" />
            <binding property="title" selector="title" />
            <binding property="price" selector="price" />
		</param>
    </resource-config>

</smooks-resource-list>